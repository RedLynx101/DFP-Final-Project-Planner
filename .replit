modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Backend"

[[workflows.workflow]]
name = "React Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "FastAPI Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uvicorn src.main:app --host 0.0.0.0 --port 8000 --reload --log-level info"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 33711
externalPort = 3001

[[ports]]
localPort = 45297
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "5000"]
build = ["bash", "-c", "echo 'Installing backend dependencies...' && pip install -r requirements.txt && echo 'Verifying backend imports...' && python -c 'import fastapi, uvicorn; print(\"Backend dependencies OK\")' && echo 'Starting frontend build...' && cd frontend && echo 'Verifying package.json exists:' && test -f package.json && echo 'package.json found' && npm install --production=false && npm run build && echo 'Verifying build output:' && test -d dist && test -f dist/index.html && ls -la dist/ && echo 'Full build completed successfully!'"]
